{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "paths": {
    "@shared/*": [
      "src/lib/shared/*"
    ],
    "@core/*": [
      "src/lib/core/*"
    ],
    "@seo/*": [
      "src/lib/core/modules/seo/*"
    ],
    "@analytics/*": [
      "src/lib/core/modules/analytics/*"
    ],
    "@translate/*": [
      "src/lib/core/modules/translate/*"
    ],
    "@state/*": [
      "src/lib/state/*"
    ],
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
